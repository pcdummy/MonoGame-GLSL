<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <appSettings>
    <!--Asset name of the Image used to create the array of heights.-->
    <!--Use heightmap or heightmap2.-->
    <add key="HeightGrayScaleImage" value="devils_heightmap"/>
    <!--Asset name of the Image used as texture in the world.-->
    <add key="WorldTexture" value="grass"/>
    <!--Relevance threshold from witch a node can be splitted into childs.-->
    <add key="ChildRelevanceThreshold" value="0.1"/>
    <!--Threshold from witch a child node can be visible near the camera. -->
    <add key="ChildFrontTestThreshold" value="5000"/>
    <!--Threshold from witch a child node can be visible far from the camera. -->
    <add key="ChildFarTestThreshold" value="20000"/>
    <!--Threshold from witch a vertex can be visible.-->
    <add key="VertexTestThreshold" value="17"/>
  </appSettings>
</configuration>